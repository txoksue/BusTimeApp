<?xml version="1.0" encoding="UTF-8"?>
<Configuration packages="com.amazonaws.services.lambda.runtime.log4j2">
  <Appenders>
    <Lambda name="Lambda">
      <PatternLayout>
			<pattern>[%d][%-5p][%t] %X{AWSRequestId} - %c:%L - %m%n</pattern>
      </PatternLayout>
    </Lambda>
  </Appenders>
  <Loggers>
    <Root level="info">
      <AppenderRef ref="Lambda" />
    </Root>
<!--     <Logger level="error"> -->
<!--     		<AppenderRef ref="Lambda" /> -->
<!--     </Logger> -->
  </Loggers>
</Configuration>
